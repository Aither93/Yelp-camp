<% include ../partials/header %>

<div class="container">
	<h1 style="text-align:center;">Create a new Capmground </h1>
	<div style="width:30%; margin: 50px auto;">
		<form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="name" value="<%=foundCamp.name%>">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="image url" value="<%=foundCamp.image%>">
			</div>
			<div class="form-group">
				<textarea class="form-control" name="description"><%=foundCamp.description%></textarea>
			</div>
			<button class="btn btn-large btn-primary btn-block">Submit</button>
		</form>
		<a href="/campgrounds">Back</a>
	</div>
</div>
<% include ../partials/footer %>